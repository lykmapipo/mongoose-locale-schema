{
  "name": "mongoose-locale-schema",
  "version": "0.4.9",
  "description": "mongoose schema to support multi-locale fields",
  "main": "lib/index.js",
  "module": "es/index.js",
  "scripts": {
    "clean": "rimraf lib dist es umd",
    "prebuild": "npm test && npm run clean",
    "build": "rollup -c",
    "lint": "eslint --fix --ext .js src/ test/ rollup.config.js",
    "pretest": "npm run lint",
    "test": "NODE_ENV=test mocha --require @babel/register test/**/*.spec.js",
    "docs": "doxdox 'lib/**/*.js' -p package.json -l markdown -o DOCUMENTATION.md",
    "cmt": "git add -A && git-cz",
    "changelog": "changelog"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lykmapipo/mongoose-locale-schema.git"
  },
  "keywords": [
    "lykmapipo",
    "mongoose",
    "mongoose-plugin",
    "language",
    "locale",
    "l10n"
  ],
  "author": {
    "name": "lykmapipo",
    "email": "lallyelias87@gmail.com",
    "url": "https://github.com/lykmapipo"
  },
  "contributors": [
    {
      "name": "lykmapipo",
      "email": "lallyelias87@gmail.com",
      "url": "https://github.com/lykmapipo"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lykmapipo/mongoose-locale-schema/issues"
  },
  "homepage": "https://github.com/lykmapipo/mongoose-locale-schema",
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/node": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "@babel/register": "^7.8.3",
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@commitlint/travis-cli": "^8.3.4",
    "@lykmapipo/mongoose-test-helpers": "^0.7.30",
    "chai": "^4.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "doxdox": "^3.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-prettier": "^3.1.2",
    "generate-changelog": "^1.8.0",
    "handlebars": "^4.7.2",
    "husky": "^4.0.7",
    "lint-staged": "^9.5.0",
    "mocha": "^7.0.0",
    "mongoose": ">=5.8.7",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "rollup": "^1.29.0",
    "shelljs": "^0.8.3"
  },
  "peerDependencies": {
    "mongoose": ">=5.8.7"
  },
  "dependencies": {
    "@lykmapipo/common": ">=0.30.1",
    "@lykmapipo/env": ">=0.16.3",
    "@lykmapipo/mongoose-common": ">=0.28.5",
    "lodash": ">=4.17.15"
  },
  "engines": {
    "node": ">=8.11.1",
    "npm": ">=5.6.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run lint",
      "git add -A"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
